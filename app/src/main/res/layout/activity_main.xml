<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/server_status"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:text="Your IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_server_ip"
            android:layout_column="1"
            android:layout_row="0" />

        <Button
            android:text="@string/paste_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paste_button"
            android:layout_row="1"
            android:layout_column="2" />

        <TextView
            android:text="Enter receiver IP:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_row="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/server_ip"
            android:layout_column="1"
            android:layout_row="1" />

        <Button
            android:text="@string/copy_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copy_button"
            android:layout_column="2"
            android:layout_row="0" />

    </GridLayout>

    <Button
        android:text="@string/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connect_phones" />

    <Button
        android:text="@string/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_button" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/big_cat_hugs"
        android:id="@+id/hug_image"
        android:visibility="invisible"/>

</LinearLayout>
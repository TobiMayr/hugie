<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="No status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:background="@color/shade1"
        android:layout_margin="3dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shade2"
        android:layout_margin="3dp">

        <TextView
            android:text="@string/listening_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listening_on" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/your_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/device_server_ip"
                android:layout_weight="0" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <Button
                android:text="@string/copy_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copy_button"
                android:layout_weight="0"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFF" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shade3"
        android:layout_margin="3dp">

        <TextView
            android:text="@string/enter_receiver_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/server_ip"
                android:layout_weight="0"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:text="@string/paste_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paste_button"
                android:layout_weight="0"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFF" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shade4"
        android:layout_margin="3dp">

        <Button
            android:text="@string/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connect_phones"
            android:background="@color/colorAccent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/big_cat_hugs"
            android:id="@+id/hug_image"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>